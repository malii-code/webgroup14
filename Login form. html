    <h2>Create Account</h2>

    <div class="input-group">
        <input type="text" id="username" placeholder=" " required>
        <label>Username</label>
    </div>

    <div class="input-group">
        <input type="email" id="email" placeholder=" " required>
        <label>Email</label>
    </div>

    <div class="input-group">
        <input type="password" id="password" placeholder=" " required>
        <label>Password</label>

        <div class="strength-bar">
            <div class="strength-level" id="strength"></div>
        </div>

        <div class="requirements" id="reqText">
            Password must contain uppercase letters, numbers, and special characters.
        </div>
    </div>

    <button id="registerBtn" disabled>Register</button>
</div>

<!-- SUCCESS POPUP -->
<div class="popup" id="popup"></div>




<script>

/* ---------------- THEME TOGGLE ---------------- */
document.querySelector(".theme-toggle").onclick = ()=>{
    document.body.classList.toggle("light");
};

/* ---------------- VALIDATION ---------------- */
const username = document.getElementById("username");
const email = document.getElementById("email");
const password = document.getElementById("password");
const btn = document.getElementById("registerBtn");
const strength = document.getElementById("strength");

function checkInputs(){
    if(username.value.trim().length > 2 &&
       email.value.includes("@") &&
       password.value.length >= 6){
        btn.disabled = false;
    } else {
        btn.disabled = true;
    }
}

username.oninput = checkInputs;
email.oninput = checkInputs;
password.oninput = checkInputs;

/* ---------------- PASSWORD STRENGTH ---------------- */
password.oninput = ()=>{
    let p = password.value;
    let level = 0;

    if(/[A-Z]/.test(p)) level++;
    if(/[0-9]/.test(p)) level++;
    if(/[!@#$%^&*]/.test(p)) level++;
    if(p.length >= 8) level++;

    let width = ["0%", "25%", "50%", "75%", "100%"][level];
    strength.style.width = width;

    strength.style.background = ["#222","#ff0022","#ff7700","#ffee00","#00ff55"][level];
};

/* ---------------- SUCCESS POPUP ---------------- */
btn.onclick = ()=>{
    const name = username.value;
    let popup = document.getElementById("popup");
    popup.innerHTML = `ðŸŽ‰ Congratulations ${name}, your account has been created!`;
    popup.style.display = "block";

    setTimeout(()=>{
        popup.style.display = "none";
    }, 4000);
};

</script>

</body>
